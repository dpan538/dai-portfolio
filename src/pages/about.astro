---
import BaseLayout from "../layouts/base_layout.astro";

// 展览与奖项的官方链接（用于 SEO 与结构化数据）
const exhibitionLinks: Record<string, string> = {
    "Colour, The Glasgow Gallery of Photography, Glasgow, UK (upcoming)": "https://www.glasgowgalleryofphotography.com/",
    "Cityscapes, Blank Wall Gallery, Athens, Greece (upcoming)": "https://www.blankwallgallery.com/",
    "POLAROID: The Instant Image, Praxis Gallery, Minneapolis, MN, USA (upcoming)": "https://www.praxisphotocenter.org/",
    "Horizons, Allora Gallery, London, UK": "https://alloragallery.com/horizons",
};
const awardLinks: Record<string, string> = {
    "Black & White Art Competition, Merit Award, Art Room Gallery": "https://www.artroomgalleryonline.com/",
    "Winter Open Theme, Group Exhibition (Finalist), Art-Collide": "https://art-collide.com/open-theme-winter-2024-2025",
    "Honorable Mention in Culture (Professional), Chromatic Awards": "https://chromaticawards.com/",
    "2nd Bold Colors, Online Juried Exhibition (Finalist), Blue Koi Gallery": "https://koisartistaward.com/2nd-bold-colors-art-exhibition/",
};

const exhibitionSchema = {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "Dai Pan — Group Exhibitions",
    "itemListElement": [
        { "@type": "Event", "name": "Colour", "organizer": { "@type": "Organization", "name": "The Glasgow Gallery of Photography", "url": "https://www.glasgowgalleryofphotography.com/" }, "url": "https://www.glasgowgalleryofphotography.com/", "startDate": "2026-05" },
        { "@type": "Event", "name": "Cityscapes", "organizer": { "@type": "Organization", "name": "Blank Wall Gallery", "url": "https://www.blankwallgallery.com/" }, "url": "https://www.blankwallgallery.com/", "startDate": "2026" },
        { "@type": "Event", "name": "POLAROID: The Instant Image", "organizer": { "@type": "Organization", "name": "Praxis Gallery", "url": "https://www.praxisphotocenter.org/" }, "url": "https://www.praxisphotocenter.org/", "startDate": "2026" },
        { "@type": "Event", "name": "City Lights, Virtual Photography Exhibition", "organizer": { "@type": "Organization", "name": "Carlotta Gallery" } },
        { "@type": "Event", "name": "Horizons", "organizer": { "@type": "Organization", "name": "Allora Gallery", "url": "https://alloragallery.com/" }, "url": "https://alloragallery.com/horizons", "startDate": "2026-02" },
    ],
};
const awardSchema = {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "Dai Pan — Awards & Recognition",
    "itemListElement": [
        { "@type": "Award", "name": "Black & White Art Competition, Merit Award", "awardee": { "@type": "Person", "name": "Dai Pan" }, "dateReceived": "2026", "url": "https://www.artroomgalleryonline.com/" },
        { "@type": "Award", "name": "Winter Open Theme, Finalist", "awardee": { "@type": "Person", "name": "Dai Pan" }, "dateReceived": "2025", "url": "https://art-collide.com/open-theme-winter-2024-2025" },
        { "@type": "Award", "name": "Honorable Mention in Culture (Professional), Chromatic Awards", "awardee": { "@type": "Person", "name": "Dai Pan" }, "dateReceived": "2025", "url": "https://chromaticawards.com/" },
        { "@type": "Award", "name": "2nd Bold Colors, Finalist", "awardee": { "@type": "Person", "name": "Dai Pan" }, "dateReceived": "2024", "url": "https://koisartistaward.com/2nd-bold-colors-art-exhibition/" },
    ],
};
---

<BaseLayout
    title="About — Dai Pan"
    description="About Dai Pan — image-based work across photography, printmaking, and conceptual design."
    canonical="https://daipan.art/about"
    active="about"
    breadcrumbs={[{ name: "Home", url: "https://daipan.art" }, { name: "About", url: "https://daipan.art/about" }]}>
    <section class="block about_intro">
        <figure class="about_photo" aria-label="Portrait of Dai Pan">
            <img
                src="/projects/about/about.jpg"
                alt="Portrait of Dai Pan"
                loading="lazy"
            />
        </figure>

        <div class="about_text">
            <p>
                Dai Pan is a visual artist and designer working across
                photography, printmaking, and conceptual design. His
                practice explores how images construct spatial perception through
                framing, repetition, and visual structure, treating photography and
                design as interconnected systems of visual thinking.
            </p>

            <p>
                His work focuses on translating everyday environments into visual
                sequences where clarity and distortion coexist. Images are
                approached as structures rather than documents — shaped by invisible rhythm,
                colour, and compositional constraints that guide attention and
                emotional response. Dai Pan develops visual systems that invite slow
                looking and open interpretation, inviting meaning to emerge
                gradually through form and perception.
            </p>
        </div>
    </section>

    <section class="block">
        <h2>Education</h2>
        <ul class="cv">
            <li>
                <span class="cv_key">Current</span>
                <span class="cv_val"
                    >University of Queensland, Brisbane, Australia — Master of
                    Information Technology (in progress)</span
                >
            </li>
            <li>
                <span class="cv_key">BFA</span>
                <span class="cv_val"
                    >School of Visual Arts (SVA), New York, USA — Bachelor of
                    Fine Arts in Design (2021-2025)</span
                >
            </li>
        </ul>
    </section>

    <section class="block">
        <h2>Group Exhibitions</h2>
        <ul class="cv">
            {
                [
                    ["2026", "Colour, The Glasgow Gallery of Photography, Glasgow, UK (upcoming)"],
                    ["2026", "Cityscapes, Blank Wall Gallery, Athens, Greece (upcoming)"],
                    ["2026", "POLAROID: The Instant Image, Praxis Gallery, Minneapolis, MN, USA (upcoming)"],
                    ["2026", "City Lights, Virtual Photography Exhibition, Carlotta Gallery (upcoming)"],
                    ["2026", "Horizons, Allora Gallery, London, UK"],
                ].map(([year, text]) => {
                    const href = exhibitionLinks[text];
                    return (
                        <li>
                            <span class="cv_key">{year}</span>
                            <span class="cv_val">
                                {href ? <a href={href} target="_blank" rel="noopener noreferrer">{text}</a> : text}
                            </span>
                        </li>
                    );
                })
            }
        </ul>
    </section>

    <section class="block">
        <h2>Awards &amp; Recognition</h2>
        <ul class="cv">
            {
                [
                    ["2026", "Black & White Art Competition, Merit Award, Art Room Gallery"],
                    ["2025", "Winter Open Theme, Group Exhibition (Finalist), Art-Collide"],
                    ["2025", "Honorable Mention in Culture (Professional), Chromatic Awards"],
                    ["2024", "2nd Bold Colors, Online Juried Exhibition (Finalist), Blue Koi Gallery"],
                ].map(([year, text]) => {
                    const href = awardLinks[text];
                    return (
                        <li>
                            <span class="cv_key">{year}</span>
                            <span class="cv_val">
                                {href ? <a href={href} target="_blank" rel="noopener noreferrer">{text}</a> : text}
                            </span>
                        </li>
                    );
                })
            }
        </ul>
    </section>

    <section class="block">
        <p class="about_contact_link"><a href="/contact">See Contact →</a></p>
    </section>

    <!-- 展览与奖项结构化数据，便于搜索引擎与 AI 关联你的履历与官方页面 -->
    <script type="application/ld+json" set:html={JSON.stringify(exhibitionSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(awardSchema)} />

    <style>
        .block {
            margin-top: 6px;
        }

        .about_intro {
            display: grid;
            grid-template-columns: minmax(0, 220px) minmax(0, 1fr);
            gap: 32px;
            align-items: start;
        }

        .about_photo {
            margin: 0;
            border: 1px solid var(--line);
            background: #f8f8f8;
        }

        .about_photo img {
            display: block;
            width: 100%;
            height: auto;
        }

        .about_text {
            font-size: 15px;
            line-height: 1.7;
            align-self: end; /* 与照片底部对齐 */
        }

        .cv {
            list-style: none;
            padding: 0;
            margin: 0;
            display: grid;
            gap: 10px;
        }

        .cv li {
            display: grid;
            grid-template-columns: 92px 1fr;
            gap: 18px;
            align-items: start;
        }

        .cv_key {
            font-size: 13px;
            color: var(--muted);
            white-space: nowrap;
            letter-spacing: 0.02em;
        }

        .cv_val {
            font-size: 15px;
        }

        .cv_val a {
            color: var(--text);
            text-decoration: none;
        }

        .cv_val a:hover {
            color: var(--muted);
            text-decoration: underline;
            text-underline-offset: 3px;
        }

        .about_contact_link {
            margin: 20px 0 0;
            font-size: 15px;
        }

        .about_contact_link a {
            color: var(--text);
            text-decoration: underline;
            text-underline-offset: 3px;
        }

        @media (max-width: 800px) {
            .about_intro {
                grid-template-columns: 1fr;
                row-gap: 20px;
            }
        }

    </style>
</BaseLayout>
